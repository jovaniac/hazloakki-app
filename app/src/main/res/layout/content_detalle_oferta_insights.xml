<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/vertical_margin_half"
    android:layout_marginLeft="@dimen/vertical_margin"
    android:layout_marginRight="@dimen/vertical_margin"
    android:layout_marginTop="@dimen/vertical_margin_half"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_repo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:textSize="10sp"
            android:textAlignment="center"
            android:textColor="@color/secondary_text"
            tools:text="Por favor, queremos saber tu opinion, o bien subscribete" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"


            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_addLista"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/secondary_text"
                android:textSize="10dp"
                tools:text="AÃ±adir a mi lista" />

            <TextView
                android:id="@+id/text_subscripcion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/secondary_text"
                android:textSize="10dp"
                tools:text="Subscribirse" />

            <TextView
                android:id="@+id/text_calificar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/secondary_text"
                android:textSize="10dp"
                tools:text="Calificar" />

            <TextView
                android:id="@+id/text_tip"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/secondary_text"
                android:textSize="10dp"
                tools:text="Dejar un tip" />

            <TextView
                android:id="@+id/text_MeGusta"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/secondary_text"
                android:textSize="10dp"
                tools:text="Me gusta" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
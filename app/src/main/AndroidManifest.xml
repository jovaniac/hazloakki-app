<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.hazloakki" >


    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.RicoPaRico" >

        <activity
            android:name="com.herprogramacion.hazloakki.ui.spash.SplasTodoAquiApp"
            android:label="@string/app_name"
            android:theme="@style/Theme.ConNavigationDrawer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.herprogramacion.hazloakki.ui.ActividadPrincipal"
            android:label="@string/app_name"
            android:theme="@style/Theme.ConNavigationDrawer">
        </activity>

        <activity
            android:name="com.herprogramacion.hazloakki.ui.ActividadConfiguracion"
            android:label="@string/titulo_actividad_configuracion"
            android:parentActivityName="com.herprogramacion.hazloakki.ui.ActividadPrincipal" >
        </activity>
        <activity
            android:name="com.herprogramacion.hazloakki.ui.NegociosRecyclerView"
            android:label="@string/app_name"
            android:theme="@style/Base.AppTheme2">
        </activity>

        <activity
            android:name="com.herprogramacion.hazloakki.provider.ActividadListaAlquileres2"
            android:label="@string/app_name"
            android:theme="@style/Base.AppTheme2">
        </activity>

        <provider
            android:name="com.herprogramacion.hazloakki.provider.ProviderApartamentos"
            android:authorities="com.herprogramacion.hazloakki"
            android:enabled="true"
            android:exported="false"/>
    </application>

</manifest>
